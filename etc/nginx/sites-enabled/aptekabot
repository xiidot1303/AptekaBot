server {
    server_name aptekabot.elite-house.uz;

    access_log /home/telegrambot/aptekabot/logs/nginx_access.log;
    error_log /home/telegrambot/aptekabot/logs/nginx_error.log;

    location / {
        proxy_pass http://127.0.0.1:8443;
        proxy_redirect off;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/simcard-bot.elite-house.uz/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/simcard-bot.elite-house.uz/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot


}
server {
    if ($host = aptekabot.elite-house.uz) {
        return 301 https://$host$request_uri;
    } # managed by Certbot

    listen 80;
    server_name aptekabot.elite-house.uz;
    return 404; # managed by Certbot
}